@model HelloWorld.Models.Product[]

@{ Layout = "~/Views/_BasicLayout.cshtml"; }
<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Classes</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #f1f1f1;
        }
    </style>
    <h1>
        Enroll In Class
    </h1>
</head>
<body>
    @if (Model.Length > 0)
    {
<table>
    <tr>

        <td>
            <div class="form-group">
                <select class="form-control" id="EnrollInClass" name="EnrollInClass">
                    @foreach (var product in Model)
                    {
    <option value=@product.ClassId>@product.Name</option>}
                </select>
                <span class="text-danger field-validation-valid" data-valmsg-for="EnrollInClass" data-valmsg-replace="true"></span>
            </div>
        </td>
        <td>
            <div class="form-group">
                <input type="submit" value="Add Class" class="btn btn-success" />
            </div>
        </td>
    </tr>
</table> }
else
{ <table>
    <tr> No classes found.</tr>
</table>}
</body>
</html>

